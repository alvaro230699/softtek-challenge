{
  "name": "fusion-api",
  "version": "1.0.0",
  "description": "Serverless API for fusing SWAPI and Country data",
  "main": "index.js",
  "scripts": {
    "set:runtime:18": "ts-node scripts/set-runtime.ts 18",
    "set:runtime:20": "ts-node scripts/set-runtime.ts 20",
    "start:dynamo": "serverless dynamodb start --stage test",
    "start:dynamo-admin": "DYNAMO_ENDPOINT=http://localhost:8000 dynamodb-admin",
    "clean": "rm -rf dist .build .serverless .tsbuildinfo",
    "build": "npm run clean && tsc",
    "deploy": "serverless deploy",
    "start:offline": "npm run clean && serverless offline start --stage dev",
    "start:offline:debug": "npm run clean && ts-node --transpile-only node_modules/.bin/serverless offline --stage dev",
    "test:unit": "npm run build && jest src",
    "test:e2e": "npx dotenv -e .env.test -- jest --config jest.e2e.config.js",
    "test:e2e:complete": "npm run set:runtime:18 && ts-node scripts/test-e2e-full.ts && npm run set:runtime:20",
    "test:all": "npm run test:unit && npm run test:e2e:complete",
    "deploy:dev": "serverless deploy --stage dev",
    "remove:dev": "serverless remove --stage dev",
    "logs:historial": "serverless logs -f historial --stage dev",
    "logs:almacenar": "serverless logs -f almacenar --stage dev",
    "logs:fusionar": "serverless logs -f fusionar --stage dev"
  },
  "keywords": [
    "SWAPI",
    "Weather API",
    "backend",
    "nodejs",
    "aws",
    "cloud"
  ],
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.772.0",
    "@aws-sdk/lib-dynamodb": "^3.772.0",
    "axios": "^1.8.0",
    "dotenv": "^16.4.7",
    "jsonwebtoken": "^9.0.0",
    "serverless-dynamodb": "^0.2.56",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/wait-on": "^5.3.4",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "dynamodb-admin": "^5.1.3",
    "jest": "^29.7.0",
    "serverless": "^3.40.0",
    "serverless-esbuild": "^1.0.0",
    "serverless-offline": "^13.2.0",
    "serverless-plugin-typescript": "^2.1.5",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.0",
    "wait-on": "^8.0.3"
  },
  "author": "Alvaro Neyra",
  "license": "MIT"
}
